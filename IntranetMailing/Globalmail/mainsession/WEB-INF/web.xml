<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.santosh.servlets.LoginServlet</servlet-class>
	</servlet>
<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.santosh.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InboxServlet</servlet-name>
		<servlet-class>com.santosh.servlets.InboxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ViewMailServlet</servlet-name>
		<servlet-class> com.santosh.servlets.ViewMailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SendReplyServlet</servlet-name>
<servlet-class> com.santosh.servlets.SendReplyServlet
</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InboxServlet</servlet-name>
		<url-pattern>/inbox</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewMailServlet</servlet-name>
		<url-pattern>/viewMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendReplyServlet</servlet-name>
		<url-pattern>/sendReply</url-pattern>
	</servlet-mapping>  
<servlet>
		<servlet-name>OutboxServlet</servlet-name>
		<servlet-class>com.santosh.servlets.OutboxServlet</servlet-class>
	</servlet>
<servlet>
		<servlet-name>OutMailServlet</servlet-name>
		<servlet-class>com.santosh.servlets.OutMailServlet</servlet-class>
	</servlet>
<servlet>
		<servlet-name>ComposeServlet</servlet-name>
		<servlet-class>com.santosh.servlets.ComposeServlet</servlet-class>
	</servlet>
<servlet>
		<servlet-name>ForwardServlet</servlet-name>
		<servlet-class>com.santosh.servlets.ForwardServlet</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>ComposeServlet</servlet-name>
		<url-pattern>/compose</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>OutMailServlet</servlet-name>
		<url-pattern>/outMail</url-pattern>
	</servlet-mapping>


<servlet-mapping>
		<servlet-name>ForwardServlet</servlet-name>
		<url-pattern>/sendForward</url-pattern>
	</servlet-mapping>
<servlet>
		<servlet-name>InsertServlet</servlet-name>
		<servlet-class>com.santosh.servlets.InsertServlet</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>InsertServlet</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>OutboxServlet</servlet-name>
		<url-pattern>/sent</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>SiteHome.html</welcome-file>
	</welcome-file-list>
</web-app>
